<body>
  <title>Admin Home</title>
    <div class="container">
      <h2><%= "Welcome Back, " + @admin.name + "!" %></h2>

      <div class="row">
        <div class="col-md-8">
          <div class='page-header'>

            <div class='btn-toolbar pull-right'>
              <div class='btn-group'>
               <%= button_to "Discussions", discussion_index_path, {method: :get, class: "btn"} %>
              </div>
            </div>

            </div>
            <h3 class='text-primary'> Enrollment Info </h3>
            <h4 class='text-info'>Percent Filled: 00.00%</h4>

            <h2>
              <div class='btn-group'>
                <h4> Showing <%= link_to "#{@status ||= "All"}", '#', {:id=>'status', 'data-toggle'=>'dropdown', class: "btn btn-sm btn-default dropdown-toggle", 'aria-expanded'=> 'false'}%> Teams
                <ul class="dropdown-menu">
                  <li><%= link_to "All", admins_path(:status => "All"), {method: 'get', id: "all_teams"} %></li>
                  <li><%= link_to "Forming", admins_path(:status => "Forming"), {method: 'get'} %></li>
                  <li><%= link_to "Pending", admins_path(:status => "Pending"), {method: 'get'} %></li>
                  <li><%= link_to "Approved", admins_path(:status => "Approved"), {method: 'get'} %></li>
                </ul>
                </h4>
              </div>
              <div class='btn-toolbar pull-right'>
                <%= link_to "Download Approved Teams", download_team_info_path, {method: 'get', class: "btn btn-primary btn-sm"} %>
                <%= link_to "Email Me", admins_email_path, {method: 'post', class: 'btn btn-info btn-sm'} %>
              </div>
            </h2>  
          </div>

          <table class="table table-striped table-hover">
            <tr>
              <td>Team ID</td> <td>Members</td> <td>Status</td> <td>Discussions</td> <td></td>
            </tr>
            
            <% @teams_li.each do |t| %>
              <tr>
                <td><%= t.id %></td>
                <td>
                  <% t.users.each do |u| %>
                    <%= u.name %> <br>
                  <% end %>
                </td>
                <% if t.approved? %>
                  <td>Approved</td>
                  <% d = Discussion.find_by_id(t.discussion_id) %>
                  <td>
                    <%= link_to "Disapprove", admin_disapprove_team_path(:team_id => t), {:id=>"disapprove_#{t.id}", :class=>'btn btn-xs btn-info'} %>
                    <%= d.info %>
                    </td>
                <% elsif t.submitted? %>
                  <td>
                    Pending
                    <br>
                  </td>
                  <% s = Submission.find_by_id(t.submission_id) %>
                  <td>
                    <%= link_to "Approve", admin_approve_team_path(:team_id => t, :disc=> "#{s.disc1id}"), {:id=>"approve_#{t.id}", :class=>'btn btn-xs btn-success'} %>
                    <%= label "disc_#{s.disc1id}", Discussion.find_by_id(s.disc1id).info %>
                    <br>
                    <%= link_to "Approve", admin_approve_team_path(:team_id => t, :disc=> "#{s.disc2id}"), {:id=>"approve_#{t.id}", :class=>'btn btn-xs btn-warning'} %>
                    <%= label "disc_#{s.disc2id}", Discussion.find_by_id(s.disc2id).info %>
                    <br>
                    <%= link_to "Approve", admin_approve_team_path(:team_id => t, :disc=> "#{s.disc3id}"), {:id=>"approve_#{t.id}", :class=>'btn btn-xs btn-danger'} %>
                    <%= label "disc_#{s.disc3id}", Discussion.find_by_id(s.disc3id).info %>
                  </td>
                <% else %>
                  <td>Forming</td>
                  <td></td>
                <% end %>
              </tr>
            <% end %>

          </table>
          

        </div>
      </div>
    </div>
</body>