<html>
<body>

  <title>Admin Home</title>
        
    <div class="container">
        <h1>Admin Home</h1>
      
      <h3><%= "Welcome Back, " + @admin.name + "!" %></h3>
      
      <div class="col-md-2">
      <table class="table">
        <tr>
          <td><%= button_to "Email Me", admins_email_path, {method: 'post', class: 'btn btn-primary'} %></td>
          <td><%= button_to "Create New Admin", new_admin_path, {method: 'get', class: "btn btn-default"} %></td>
        </tr>
      </table>
      </div>
      
      <br>
      <br>
    
      <div class="row">
        <div class="col-md-8">
          <div class='page-header'>

            <div class='btn-toolbar pull-right'>
              <div class='btn-group'>
               <%= button_to "Upload Discussions", '#', {method: :get, class: "btn"} %>
              </div>
            </div>

            </div>
            <h3 class='text-primary'> Enrollment Info </h3>
            <h4 class='text-info'>Percent Filled: 00.00%</h4>
            <div class='btn-toolbar pull-right'>
              <div class='btn-group'>
                <%= button_to "Download Team Information", download_team_info_path, {method: 'get', class: "btn btn-primary btn-med"} %>
              </div>
            </div>

            <h2>Team List</h2>
          </div>
          <table class="table table-striped table-hover">
            <tr>
              <td>Team ID</td>
              <td>Members</td>
              <td>Status</td>
              <td></td>
            </tr>
            <% @teams_li.each do |t| %>
              <tr>
                <td><%= t.id %></td>
                <td><% t.users.each do |u| %>
                  <%= u.name %>
                  <br>
                <% end %></td>
                <td><%= t.approved ? 'Approved' : 'Not Approved' %></td>
                <td>
                  <div class="btn-group">
                    <a class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Change Status</a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Approve", approve_team_path(:team_id => t) %></li>
                      <li><%= link_to "Disapprove", disapprove_team_path(:team_id => t) %></li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
              
            
          </table>
        </div>
      </div>
        
    </div>
</body>