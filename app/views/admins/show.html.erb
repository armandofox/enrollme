<body>
  <title>Admin Home</title>
    <div class="container">
      <h2><%= "Welcome Back, " + @admin.name + "!" %></h2>

      <div class="row">
        <div class="col-md-8">
          <div class='page-header'>

            <div class='btn-toolbar pull-right'>
              <div class='btn-group'>
               <%= button_to "Discussions", discussion_index_path, {method: :get, class: "btn"} %>
              </div>
            </div>

            </div>
            <h2 class='text-primary'> Teams </h2>
            

            <h2>
              <div class='btn-group'>
                <h4> Showing <%= link_to "#{@status ||= "All"}", '#', {:id=>'status', 'data-toggle'=>'dropdown', class: "btn btn-sm btn-default dropdown-toggle", 'aria-expanded'=> 'false'}%> Teams
                <ul class="dropdown-menu">
                  <li><%= link_to "All", admins_path(:status => "All"), {method: 'get', id: "all_teams"} %></li>
                  <li><%= link_to "Forming", admins_path(:status => "Forming"), {method: 'get'} %></li>
                  <li><%= link_to "Pending", admins_path(:status => "Pending"), {method: 'get'} %></li>
                  <li><%= link_to "Approved", admins_path(:status => "Approved"), {method: 'get'} %></li>
                </ul>
                </h4>
              </div>
              <div class='btn-toolbar pull-right'>
                <%= link_to "Download Approved Teams", download_team_info_path, {method: 'get', class: "btn btn-primary btn-sm"} %>
                <%= link_to "Email Me", admins_email_path, {method: 'post', class: 'btn btn-success btn-sm'} %>
              </div>
            </h2>  
          </div>

          <table class="table table-striped table-hover">
            <tr>
              <td>Team ID</td> <td>Members</td> <td>Status</td> <td></td>
            </tr>
            
            <% @teams_li.each do |t| %>
              <tr>
                <td><%= link_to t.id, team_path(t.id) %></td>
                <td>
                  <% t.users.each do |u| %>
                    <%= link_to u.name, user_path(u.id) %> <br>
                  <% end %>
                </td>
                <td><%= t.approved ? 'Approved' : (t.submitted ? 'Pending' : 'Forming') %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to "Change Status", '#', {:id=>"change_status_#{t.id}", 'data-toggle'=> 'dropdown', class: "btn btn-info btn-sm dropdown-toggle", 'aria-expanded'=> 'false'} %>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Approve", admin_approve_team_path(:team_id => t), {:id=>"approve_#{t.id}"} %></li>
                      <li><%= link_to "Disapprove", admin_disapprove_team_path(:team_id => t), {:id=>"disapprove_#{t.id}"} %></li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>

          </table>
          

        </div>
      </div>
    </div>
</body>