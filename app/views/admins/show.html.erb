<html>
<head>
  <title>Admin Home</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

        
    <div class="container">
        <h1>Admin Home</h1>
      
      <h3><%= "Welcome Back, " + @admin.name + "!" %></h3>
      
      <div class="row">
        <div class="col-md-8">
          <h2>Team List</h2>
          <table class="table table-striped table-hover">
            <tr>
              <td>Team ID</td>
              <td>Members</td>
              <td>Status</td>
            </tr>
            <% Team.all.each do |t| %>
              <tr>
                <td><%= t.id %></td>
                <td><% t.users.each do |u| %>
                  <%= u.name %>
                  <br>
                <% end %></td>
                <td><%= t.approved ? 'Approved' : 'Pending' %></td>
              </tr>
            <% end %>
              
            
          </table>
        </div>
      </div>
        
    </div>
</body>