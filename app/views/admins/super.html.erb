<body>
    <title>Edit Admins</title>
    <div class="container">
        <h1>Edit Admins</h1>
        <% if @admin.superadmin == true %>
            <%= form_for @admin, url: {action: "transfer", confirm: "Are you sure?"}, class: "form-horizontal" do |f| %>
                <fieldset>
                    <table class="table table-striped table-hover">
                        <tr>
                          <td>Admin Name</td> <td>Transfer SuperAdmin Status</td> <td>Delete Admin</td>
                        </tr>
                            <% Admin.all.each do |a| %>
                                <% if a.id != @admin.id %>
                                    <tr>
                                        <td><%= a.name %></td>
                                        <td>
                                            <%= radio_button_tag "transfer_admin", a.id %>
                                        </td>
                                        <td>
                                            <%= link_to "Delete #{a.name}", admin_path(:id => a.id), class: "btn", data: {method: "delete", confirm: "Are you sure you want to delete #{a.name}?"} %>
                                        </td>
                                    </tr>
                                <% end %>
                            <% end %>
                    </table>
                    <div class="actions form-group">
                        <a href="/" class="btn btn-default">Cancel</a>
                        <%= f.submit "Transfer", class: "btn btn-primary", data: {confirm: "Are you sure you want to transfer superadmin privileges? You will no longer have access to this page."}  %>
                    </div>
                </fieldset>
            <% end %>
        <% end %>
    </div>
</body>