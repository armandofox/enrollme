<body>
    <title>Email Team</title>
    <div class="container">
        <h1>Email Team</h1>
        <%= form_for @team, :url => do_email_team_path(@team.id), :method => :post, class: "form" do |f| %>
            <fieldset>
                <div class="form-group">
                    <input type="text" class="form-control" name="Subject" placeholder="Subject..." />
                </div>
                <div class="form-group">
                    <textarea name="Message" rows="5" class="form-control" placeholder="Body..."></textarea>
                    <% if !@user.team.nil? %>
                        <p class="text-danger"> <strong> Warning: </strong> Other team cannot add you if you are currently on a team. Please leave your current team.<p>
                    <% end %>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" id="Send" value="Send" />
                </div>
            </fieldset>
        <% end %>
    </div>
</body>
